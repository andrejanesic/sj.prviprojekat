<!doctype html>
<html>
<head>
    <%- include('../partials/head'); %>
    <title>Admin | Reset Password</title>
</head>
<body id="password" class="bg-slate-200">
<%- include('../partials/body'); %>
<div class="container mx-auto">
    <div class="flex flex-wrap justify-center pt-20">
        <div class="w-full md:w-1/2 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col">
            <h1 class="text-3xl font-bold mb-4 text-center">Reset Password</h1>
            <div class="mb-4">
                <label class="block text-grey-darker text-sm font-bold mb-2" for="password">
                    New password
                </label>
                <input class="_password shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" id="password"
                       type="text"
                       placeholder="Tango Hotel India Charlie Charlie">
            </div>
            <div class="flex justify-center">
                <button class="_reset bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 px-4 rounded" type="button">
                    Reset Password
                </button>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/script.ejs'); %>
</body>
</html>